{
    "name": "company/cake-calculator",
    "description": "A PHP command-line utility to track employee birthday cakes",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "John",
            "email": "john@company.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/console": "^6.0",
        "nesbot/carbon": "^2.70"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "vimeo/psalm": "^5.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/cake-calculator"
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "psalm": "psalm",
        "phpstan": "phpstan analyse",
        "post-install-cmd": [
            "@composer dump-autoload --optimize"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
